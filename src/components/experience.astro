---  
import { experience, education } from "../data/experience";  
---  
  
<section id="experience" class="py-12 border-t border-[#ffffff10] text-[var(--white)]">  
  <div class="max-w-5xl mx-auto">  
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My journey</h2>  
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Experience</h3>  
      
    <div class="space-y-8">  
      {experience.map((exp) => (  
        <div class="bg-[#1414149c] rounded-2xl p-6 border border-[var(--white-icon-tr)]">  
          <h4 class="text-2xl font-semibold text-[var(--sec)]">{exp.title}</h4>  
          <p class="text-xl text-[var(--white)] mb-2">{exp.company}</p>  
          <p class="text-[var(--white-icon)] mb-4">{exp.location} • {exp.period}</p>  
          <ul class="space-y-2">  
            {exp.achievements.map((achievement) => (  
              <li class="flex items-start">  
                <span class="text-[var(--sec)] mr-2">•</span>  
                <span class="text-[var(--white-icon)]">{achievement}</span>  
              </li>  
            ))}  
          </ul>  
        </div>  
      ))}  
    </div>  
  
    <div class="mt-12">  
      <h3 class="text-3xl md:text-4xl font-medium mb-6">Education</h3>  
      <div class="bg-[#1414149c] rounded-2xl p-6 border border-[var(--white-icon-tr)]">  
        <h4 class="text-2xl font-semibold text-[var(--sec)]">{education.degree}</h4>  
        <p class="text-xl text-[var(--white)] mb-2">{education.institution}</p>  
        <p class="text-[var(--white-icon)]">{education.location} • {education.period}</p>  
        <span class="inline-block mt-2 px-3 py-1 text-sm bg-[var(--sec)] text-white rounded-full">  
          {education.status}  
        </span>  
      </div>  
    </div>  
  </div>  
</section>